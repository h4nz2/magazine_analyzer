# Neon PostgreSQL connection string
# Format: postgres://username:password@host:port/database?sslmode=require
DATABASE_URL=postgres://username:password@ep-example-name-123456.region.aws.neon.tech:5432/neondb?sslmode=require

# API Keys for AI services
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Embeddings configuration
# Voyage AI is recommended for use with Claude (get key at voyageai.com)
VOYAGE_API_KEY=your_voyage_api_key_here
# Set to 'openai' to use OpenAI embeddings instead of Voyage
EMBEDDING_PROVIDER=voyage